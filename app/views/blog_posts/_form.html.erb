<%= form_with model: blog_post do |form| %>
<%if @blog_post.errors.any?%> 
  <div>
    <% @blog_post.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>
<% end %>
  <div>
  <%= form.label :title %>
  <%= form.text_field :title %>
  </div>
  <div>
  <%= form.label :body %>
  <%= form.text_area :body %>

  <%= form.submit "Create Blog Post" %>
  </div>
<% end %> 